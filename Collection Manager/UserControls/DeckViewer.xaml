<UserControl x:Class="Collection_Manager.UserControls.DeckViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Collection_Manager.UserControls"
             xmlns:ce="clr-namespace:Collection_Manager.CustomElements"
             mc:Ignorable="d" 
             d:DesignHeight="425" d:DesignWidth="1110">

    <Grid>
        <ScrollViewer Background="LightGray" Height="425" Width="1110" Margin="0, 0, 0, 0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="Deck" Orientation="Horizontal" CanHorizontallyScroll="True" CanVerticallyScroll="True"/>
        </ScrollViewer>
    </Grid>
</UserControl>
