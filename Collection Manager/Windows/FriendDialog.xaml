<Window x:Class="Collection_Manager.Windows.FriendDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collection_Manager.Windows"
        xmlns:ce="clr-namespace:Collection_Manager.CustomElements"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        Title="Edit Friends" Height="230" Width="400">
    <Grid>
        <ce:PlaceholderBox x:Name="NameInput" Width="350" Height="50" Placeholder="Enter a username..." VerticalContentAlignment="Center" FontSize="25" Margin="0, 0, 0, 85"/>
        <Button Name="CancelButton" Content="Cancel" Width="100" Height="50" FontSize="20" Margin="0, 45, 250, 0"/>
        <Button Name="RemoveButton" Content="Remove" Width="100" Height="50" FontSize="20" Margin="0, 45, 0, 0"/>
        <Button Name="AddButton" Content="Add" Width="100" Height="50" FontSize="20" Margin="250, 45, 0, 0"/>
        <Label Name="Error" Height="30" Margin="0, 150, 0, 0" HorizontalContentAlignment="Center" Foreground="Red" Visibility="Hidden"/>
    </Grid>
</Window>
